doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    title Radi Website
    // HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
      script(src='js/html5shiv.min.js')
      script(src='js/respond.min.js')
    // stylesheet

    link(href='scss/style.css', type='text/css', rel='stylesheet')
  body
    .mask-body
    header#header
      .container
        .header-content
          #menu
            i.iconsp-menu
            span MENU
          figure#logo
            a(href='/'): img(src='scss/img/logo.png' height='46' width='134' alt='Radi website')
          #information-contact
            a.phone-number.text-orange(href='callto:1800212309') 1800 212 309
            a.email-info(href='mailto:info@radiservices.com.au'): b info@radiservices.com.au
    nav#menu-right
      ul.menu-list
        each val in ['home','service','custom solutions','testimonials','contact us']
          li: a(href='#')= val
      ul.social
        each val in ['instagram','facebook','twitter']
          li: a(href='#'): i(class='iconsp-#{val}')

    block main


    footer#footer
      .container
        ul.left-footer
          li.abn-info
            span ABN:&nbsp
            span 22 333 4434
          li.license-number
            span License Number:&nbsp
            span 9939299293
          li.term-condition
            a(href='') Terms & Conditions
        ul.right-footer
          li: a(href='') Designed by Openseed
    script(src='js/jquery-1.11.2.min.js' type='text/javascript')
    script(src='js/script.js' type='text/javascript')